{
    "apiVersion": "v1",
    "kind": "PersistentVolumeClaim",
    "metadata": {
        "name": "cita-pvc"
    },
    "spec": {
        "resources": {
            "requests": {
                "storage": "50Gi"
            }
        },
        "accessModes": [
            "ReadWriteMany"
        ],
        "storageClassName": "nfs"
    }
}
